---
// Componente per creare link a file statici nella cartella public
// che rispettano automaticamente il parametro base di Astro
const { href, children } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
// Rimuovi eventuali / iniziali dall'href per evitare doppie barre
const cleanHref = href.startsWith("/") ? href.slice(1) : href;
const fullUrl = `${baseUrl}${cleanHref}`;
---

<a href={fullUrl}><slot /></a>
